<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverviewActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_background" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true">
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_background" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back,"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Here's your overview"
                android:layout_below="@id/tv_hello"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:layout_height="200dip"
                android:layout_width="match_parent"
                android:id="@+id/graphHeartRate"
                android:layout_below="@id/tv_heart_rate" />

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_below="@id/graphHeartRate"
                android:layout_marginTop="20dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:layout_height="200dip"
                android:layout_width="match_parent"
                android:id="@+id/graphSteps"
                android:layout_below="@id/tv_steps" />

            <TextView
                android:id="@+id/tv_active_burned_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burned Calories"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_below="@id/graphSteps"
                android:layout_marginTop="20dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:layout_height="200dip"
                android:layout_width="match_parent"
                android:id="@+id/graphActiveBurnedCalories"
                android:layout_below="@id/tv_active_burned_calories"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_activity_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity Duration"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_below="@id/graphActiveBurnedCalories"
                android:layout_marginTop="20dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:layout_height="200dip"
                android:layout_width="match_parent"
                android:id="@+id/graphActivityDuration"
                android:layout_below="@id/tv_activity_duration"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>