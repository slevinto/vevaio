            android:fontFamily="sans-serif"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. "
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_answer_title_2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/divider_2"
            android:layout_width="350dp"
            android:layout_height="0.7dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_answer_2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_question_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Question"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_question_3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_question_3"
            app:layout_constraintTop_toBottomOf="@+id/divider_2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_question_3"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. "
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_title_3"
            app:layout_constraintVertical_bias="0.0" />

